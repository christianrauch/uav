<?xml version="1.0"?>
<robot name="rotor_link" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="rotor_link" params="id base origin radius">
    <link name="rotor/${id}">
      <visual>
        <geometry>
          <cylinder radius="${radius}" length="0.001" />
        </geometry>
      </visual>
    </link>

    <joint name="rotor/${id}" type="continuous">
      <parent link="${base}" />
      <child link="rotor/${id}" />
      <origin xyz="${origin}" />
      <axis xyz="0 0 1" />
    </joint>
  </xacro:macro>
</robot>
