<?xml version="1.0"?>
<robot name="quad_x" xmlns:xacro="http://ros.org/wiki/xacro">
    <link name="base_link"/>

    <xacro:macro name="rotor_link" params="name radius">
        <link name="${name}">
            <visual>
                <geometry>
                    <cylinder radius="${radius}" length="0.001"/>
                </geometry>
            </visual>
        </link>
    </xacro:macro>

    <!--Skydio X2 configuration-->
    <!--https://github.com/lvjonok/skydio_x2_description-->

    <xacro:rotor_link name="rotor/1" radius="0.13"/>
    <xacro:rotor_link name="rotor/2" radius="0.13"/>
    <xacro:rotor_link name="rotor/3" radius="0.13"/>
    <xacro:rotor_link name="rotor/4" radius="0.13"/>

    <joint name="rotor/1" type="continuous">
        <parent link="base_link"/>
        <child link="rotor/1"/>
        <origin xyz="-0.14 -0.18 0.05"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="rotor/2" type="continuous">
        <parent link="base_link"/>
        <child link="rotor/2"/>
        <origin xyz="-0.14 0.18 0.05"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="rotor/3" type="continuous">
        <parent link="base_link"/>
        <child link="rotor/3"/>
        <origin xyz="0.14 0.18 0.08"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="rotor/4" type="continuous">
        <parent link="base_link"/>
        <child link="rotor/4"/>
        <origin xyz="0.14 -0.18 0.08"/>
        <axis xyz="0 0 1"/>
    </joint>


    <ros2_control name="proxy_imu" type="sensor">
        <hardware>
            <plugin>uav_hardware/ProxyIMU</plugin>
            <param name="sensor_name">base_imu</param>
        </hardware>

        <sensor name="base_imu">
            <state_interface name="orientation.x"/>
            <state_interface name="orientation.y"/>
            <state_interface name="orientation.z"/>
            <state_interface name="orientation.w"/>
            <state_interface name="angular_velocity.x"/>
            <state_interface name="angular_velocity.y"/>
            <state_interface name="angular_velocity.z"/>
            <state_interface name="linear_acceleration.x"/>
            <state_interface name="linear_acceleration.y"/>
            <state_interface name="linear_acceleration.z"/>
        </sensor>
    </ros2_control>

    <ros2_control name="proxy_actuator" type="actuator">
        <hardware>
            <plugin>uav_hardware/ProxyActuator</plugin>
        </hardware>

        <joint name="rotor/1">
            <command_interface name="velocity"/>
        </joint>

        <joint name="rotor/2">
            <command_interface name="velocity"/>
        </joint>

        <joint name="rotor/3">
            <command_interface name="velocity"/>
        </joint>

        <joint name="rotor/4">
            <command_interface name="velocity"/>
        </joint>
    </ros2_control>
</robot>
