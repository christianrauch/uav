         type="uav::proxy::ProxyIMU"
         base_class_type="hardware_interface::SensorInterface">
    <description>
      proxy interface to an IMU
    </description>
  </class>
</library>

<library path="proxy_actuator">
  <class name="uav/proxy/Actuator"
         type="uav::proxy::ProxyActuator"
         base_class_type="hardware_interface::ActuatorInterface">
    <description>
      proxy interface to mavros_msgs/msg/ActuatorControl
    </description>
  </class>
</library>

<library path="proxy_rc">
  <class name="uav/proxy/RC"
         type="uav::proxy::ProxyRC"
         base_class_type="hardware_interface::SensorInterface">
